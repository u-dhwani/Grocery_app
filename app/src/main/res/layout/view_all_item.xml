<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">
        <ImageView

            android:id="@+id/view_all_item_img"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:src="@drawable/fruits"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_all_item_name"
                android:fontFamily="@font/alice"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold"

                ></TextView>
            <TextView
                android:fontFamily="@font/alice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_all_item_description"
                android:text="Description"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="false"
                android:textSize="15sp"


                ></TextView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/alice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Rs."
                ></TextView>
            <TextView
                android:id="@+id/view_all_item_price"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="@font/alice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                ></TextView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="-5dp"
                        android:src="@drawable/ratingbar"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_all_item_rating"
                        android:text="5.0"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"></TextView>
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_baseline_arrow_forward"
                ></ImageView>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>