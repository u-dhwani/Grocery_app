<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="7dp"
    android:elevation="5dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">
        <ImageView

            android:id="@+id/cat_nav_img"
            android:scaleType="centerInside"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:src="@drawable/fruits"
            ></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_cat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product price"
                android:textColor="@color/purple_700"
                android:textSize="19sp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/remove_item"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:src="@drawable/remove_circle"></ImageView>

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="22dp"

                    android:text="  1  "
                    android:textSize="20sp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/add_item"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:src="@drawable/add_circle"></ImageView>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buynow"
                android:layout_width="109dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="10dp"

                android:background="@drawable/btn_bg_detailed"
                android:text="Buy Now"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>